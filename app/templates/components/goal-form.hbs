{{#validation-group label="Name" for="name" errors=model.errors.name}}
  {{input value=model.name id="name" class="form-control"}}
{{/validation-group}}
{{#validation-group label="Description" for="description" errors=model.errors.description}}
  {{input value=model.description id="description" class="form-control" placeholder="optional"}}
{{/validation-group}}
{{#validation-group label="Score" for="score" errors=model.errors.score}}
  {{input value=model.score id="score" class="form-control" placeholder=""}}
{{/validation-group}}
